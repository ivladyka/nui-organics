{%- assign page_pr_img_size = settings.use_eq_nav_height -%}
{%- if cv_color != 'jas-p-item' -%}
   {%- if page_pr_img_size and product.images.size > 1 -%}
      {%- for image in product.images -%}
         {%- assign alt = image.alt -%}
         {%- unless alt contains 'jas_360' -%}
         {%- assign img_url = image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
         {%- assign img_alt = image.alt | split:'|' | first | handleize | strip -%}
           {%- if image.attached_to_variant? and settings.use_clicking_variant_image -%}
              {%- for variant in image.variants -%}
                 <div class="bc_{{img_alt}}">
                    <span class="bc_{{img_alt}} jas-pr_nav-image-equal lazyload" data-bgset="{%- include 'bgset', image: image -%}" data-sizes="auto" data-parent-fit="cover">
                    <img class="op_0 attachment-shop_single size-shop_single sp-post-image {{ img_class }}" src="{{ image | img_url: '80x' }}" data-image-id="{{ image.id }}" data-variant_id= "{{variant.id}}" alt="{{ image.alt | split:'|' | last | escape }}">
                    </span>
                 </div>
              {%- endfor -%}
           {%- else -%}
              <div class="bc_{{img_alt}}">
